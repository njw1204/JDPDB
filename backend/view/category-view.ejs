<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1" name="viewport">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">

    <link href="/css/main.css" rel="stylesheet">
    <link href="/css/menu.css" rel="stylesheet">
    <link href="/css/hover.css" rel="stylesheet">
    <link href="/css/category.css" rel="stylesheet">

    <script defer src="/fontawesome/js/all.js"></script>

    <title>Animal List</title>
</head>

<body>
<% include ./header %>

<nav id="sidebar">
    <div class="panel-group" id="accordion">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title ml-4">
                    <a class="text-dark" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" style="font-size: 18px;"><i class="fas fa-list fa-fw mr-2"></i>Categories</a>
                </h4>
            </div>
            <div id="collapseOne" class="panel-collapse collapse in">
                <div class="panel-body">
                    <table class="table table-borderless">
                        <% for (let category of categories) { %>
                            <tr>
                                <td class="text-center">
                                    <% if (category.name === "CAT") { %>
                                        <a href="/category/<%= category.id %>" style="font-size: 16px;"><i class="fas fa-cat fa-fw" style="margin-right: 5px;"></i><%= category.name %></a>
                                    <% } else if (category.name == "DOG") { %>
                                        <a href="/category/<%= category.id %>" style="font-size: 16px;"><i class="fas fa-dog fa-fw" style="margin-right: 5px;"></i><%= category.name %></a>
                                    <% } else if (category.name == "FISH") { %>
                                        <a href="/category/<%= category.id %>" style="font-size: 16px;"><i class="fas fa-fish fa-fw" style="margin-right: 5px;"></i><%= category.name %></a>
                                    <% } else if (category.name == "BIRD") { %>
                                        <a href="/category/<%= category.id %>" style="font-size: 16px;"><i class="fas fa-dove fa-fw" style="margin-right: 5px;"></i><%= category.name %></a>
                                    <% } else { %>
                                        <a href="/category/<%= category.id %>" style="font-size: 16px;"><i class="fas fa-paw fa-fw" style="margin-right: 5px;"></i><%= category.name %></a>
                                    <% } %>
                                </td>
                            </tr>
                        <% } %>
                    </table>
                </div>
            </div>
        </div>

        <hr>

        <div class="panel panel-default">
            <div class="panel-body">
                <h4 class="panel-title ml-4">
                    <a class="text-dark" data-toggle="collapse" data-parent="#accordion" href="#collapseFour" style="font-size: 18px;"><i class="fas fa-star fa-fw mr-2"></i>Subscribed List</a>
                </h4>
            </div>
            <div id="collapseFour" class="panel-collapse collapse">
                <ul class="list-unstyled components">
                    <% if (typeof user !== "undefined" && my_subscribe_pages.length > 0) { %>
                        <% for (let page of my_subscribe_pages) { %>
                            <li class="active" style="padding-top : 15px">
                                <div class="card-header">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="d-flex justify-content-between align-items-center"
                                            OnClick="location.href ='/page/<%= page.id %>'" style="cursor:pointer;">
                                            <div class="mr-2">
                                                <% if (page.profile_picture === null) { %>
                                                    <img alt="" class="rounded-circle" src="/media/no-image.jpg" width="50" height="50">
                                                <% } else { %>
                                                    <img alt="" class="rounded-circle" src="<%= page.profile_picture %>" width="50" height="50">
                                                <% } %>
                                            </div>
                                            <div class="ml-2">
                                                <div class="m-0" style="color: rgb(10,10,10); font-size: 14px;"><%= page.animal_name %></div>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="dropdown">
                                                <button aria-expanded="false" aria-haspopup="true"
                                                        class="btn btn-link dropdown-toggle" data-toggle="dropdown"
                                                        name="dropdownButton" type="button">
                                                </button>
                                                <div aria-labelledby="gedf-drop1" class="dropdown-menu dropdown-menu-right">
                                                    <a class="dropdown-item" href="/page/unsubscribe/<%= page.id %>?next=/">Unsubscribe</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        <% } %>
                    <% } else if (typeof user === "undefined") { %>
                        <li class="active" style="padding-top : 15px">
                            <div class="card-header text-center">
                                You are not logged in.
                            </div>
                        </li>
                    <% } else { %>
                        <li class="active" style="padding-top : 15px">
                            <div class="card-header text-center">
                                List is empty.
                            </div>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
</nav>

<!-- Page Content -->
<div class="container main-container">
    <% if (category.name === "CAT") { %>
        <h2 class="mt-5 mb-3"><i class="fas fa-cat fa-fw mr-2"></i><%= category.name %></h2>
    <% } else if (category.name == "DOG") { %>
        <h2 class="mt-5 mb-3"><i class="fas fa-dog fa-fw mr-2"></i><%= category.name %></h2>
    <% } else if (category.name == "FISH") { %>
        <h2 class="mt-5 mb-3"><i class="fas fa-fish fa-fw mr-2"></i><%= category.name %></h2>
    <% } else if (category.name == "BIRD") { %>
        <h2 class="mt-5 mb-3"><i class="fas fa-dove fa-fw mr-2"></i><%= category.name %></h2>
    <% } else { %>
        <h2 class="mt-5 mb-3"><i class="fas fa-paw fa-fw mr-2"></i><%= category.name %></h2>
    <% } %>

    <!-- only one row exists.-->
    <div class="row">
        <% for (let page of pagesByCategory) { %>
            <div class="col-lg-4 col-sm-6 mb-4">
                <div class="card h-100">
                    <div class="hovereffect">
                        <% if (page.profile_picture === null) { %>
                            <img alt="" class="card-img-top" src="/media/no-image.jpg" width="700" height="200">
                        <% } else { %>
                            <img alt="" class="card-img-top" src="<%= page.profile_picture %>" width="700" height="200">
                        <% } %>
                        <div class="overlay">
                            <h2><%= page.animal_name %> (<%= page.category %>)</h2>
                            <a class="info" href="/page/<%= page.id %>">GO HOME</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="/page/<%= page.id %>"><%= page.animal_name %></a>
                        </h4>
                        <p class="card-text"><%= page.description %></p>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
    <!-- /.row -->
</div>
<!-- /.container -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>

</html>
